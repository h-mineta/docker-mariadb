# this is read by the standalone daemon and embedded servers
[server]

# this is only for the mysqld standalone daemon
[mysqld]
port                 = 3306
#socket               = /var/lib/mysql/mysql.sock
character_set_server = utf8mb4
collation_server     = utf8mb4_general_ci

# debug sql query
#general_log
#general_log_file=/var/log/mysqld-query.log
#log_output=file

back_log = 10
max_connections = 50
max_connect_errors = 500
table_open_cache = 256
max_allowed_packet = 16M
binlog_cache_size = 1M
max_heap_table_size = 64M
read_buffer_size = 8M
read_rnd_buffer_size = 8M
sort_buffer_size = 1M
join_buffer_size = 1M
query_cache_type = 0
query_cache_size = 0
query_cache_limit = 2M
ft_min_word_len = 4
default_storage_engine = InnoDB
thread_stack = 240K
#transaction_isolation = REPEATABLE-READ
transaction_isolation = READ-COMMITTED
log_bin=mysql-bin
expire_logs_days = 2
#binlog_format=mixed
binlog_format=ROW
sync_binlog = 1
skip_name_resolve
skip_external_locking

#sql_mode = TRADITIONAL,NO_AUTO_VALUE_ON_ZERO,ONLY_FULL_GROUP_BY
sql_mode = STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION,TRADITIONAL,NO_AUTO_VALUE_ON_ZERO,ONLY_FULL_GROUP_BY

slow_query_log
long_query_time = 2

open_files_limit = 65535

#*** MyISAM Specific options
key_buffer_size = 32M
bulk_insert_buffer_size = 32M
#myisam_sort_buffer_size = 128M
myisam_sort_buffer_size = 1M
#myisam_max_sort_file_size = 10G
myisam_max_sort_file_size = 1G
myisam_repair_threads = 1
#myisam_recover_options

# *** INNODB Specific options ***
innodb_autoinc_lock_mode = 2
innodb_buffer_pool_dump_at_shutdown = 1
innodb_buffer_pool_load_at_startup = 1
innodb_strict_mode
innodb_file_format = Barracuda
innodb_file_per_table
innodb_large_prefix = 1
innodb_buffer_pool_size = 4G
innodb_buffer_pool_instances = 4 # 1 for small
innodb_data_file_path = ibdata1:1G:autoextend:max:8G
innodb_autoextend_increment=64
innodb_write_io_threads = 8
innodb_read_io_threads = 8
innodb_thread_concurrency = 16
innodb_flush_log_at_trx_commit = 2
innodb_log_buffer_size = 32M
innodb_log_file_size = 1G
innodb_log_files_in_group = 2
innodb_max_dirty_pages_pct = 90
innodb_flush_method=O_DSYNC
innodb_lock_wait_timeout = 120
innodb_checksum_algorithm = CRC32
innodb_io_capacity = 5000
innodb_io_capacity_max = 10000
innodb_print_all_deadlocks =1
skip_innodb_doublewrite

## innodb for ssd
#innodb_flush_neighbors = 0
#innodb_random_read_ahead = 0
#innodb_read_ahead_threshold = 0
